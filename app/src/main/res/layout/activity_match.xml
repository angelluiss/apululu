<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    tools:context=".activity.MatchActivity">
    <ImageView
        android:id="@+id/ivMatchTittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/match_title"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp" />
    <LinearLayout
        android:id="@+id/matchOne"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/ivMatchTittle"
        android:background="@drawable/rounded_button_gradient_solid">

    </LinearLayout>
    <LinearLayout
        android:id="@+id/matchTwo"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_alignTop="@+id/matchOne"
        android:layout_alignEnd="@+id/matchOne"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_button_gradient_solid">

    </LinearLayout>

</RelativeLayout>