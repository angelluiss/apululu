<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".activity.ProfileLikeDislikeActivity">

    <RelativeLayout
        android:id="@+id/rlProfileLikeDislike"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_circle_little">

        <LinearLayout
            android:id="@+id/llProfileLDTittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="47dp">
            <TextView
                android:id="@+id/tvProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alisha Khal"
                android:textSize="50sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/llProfileLDTittle"
            android:layout_marginTop="75dp"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/imagen_perfil"
                app:civ_border_color="#FF000000" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDates1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llProfileLDTittle"
            android:layout_marginTop="190dp"
            android:gravity="left"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvAgeProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21,"
                    android:textSize="30sp"
                    android:textColor="@color/color_white"/>
                <TextView
                    android:id="@+id/tvOccupationProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student"
                    android:textSize="20sp"
                    android:textColor="@color/color_white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvDistanceProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="150 km"
                    android:textSize="20sp"
                    android:textColor="@color/color_white"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/llcity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llDates1"
            android:gravity="left">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Habana Cuba"
                    android:layout_marginLeft="60dp"
                    android:textColor="@color/color_white"
                    android:textSize="20sp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llcity"
            android:layout_marginTop="30dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:maxLines="4"
                    android:lines="4"
                    android:text="Lorem Isum Whatesdsda gadgadgagadg adgadgadgaadgadggada gadgad adgaga Write sasd"
                    android:textColor="@color/color_white"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="45dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/heart_1_"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civLike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/heart_1_like" />
            </LinearLayout>



        </LinearLayout>
    </RelativeLayout>
</LinearLayout>