<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HomeActivity">

        <LinearLayout
            android:id="@+id/llmenuBar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <include layout="@layout/menu_layout"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/llmenuBar2">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                        <View
                            android:layout_width="5dp"
                            android:layout_height="match_parent"
                            android:id="@+id/left"
                            android:textSize="30sp"
                            android:layout_margin="5dp"
                            android:layout_centerVertical="true"
                            android:scaleY="0"
                            android:background="@android:color/black"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:id="@+id/up"
                            android:textSize="30sp"
                            android:layout_margin="5dp"
                            android:layout_centerHorizontal="true"
                            android:scaleX="0"
                            android:background="@android:color/black"/>
                        <View
                            android:layout_width="5dp"
                            android:layout_height="match_parent"
                            android:id="@+id/right"
                            android:textSize="30sp"
                            android:layout_margin="5dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:scaleY="0"
                            android:background="@android:color/black"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:id="@+id/down"
                            android:textSize="30sp"
                            android:layout_margin="5dp"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:scaleX="0"
                            android:background="@android:color/black"/>

                        <com.db.rossdeckview.RossDeckView
                            xmlns:derdidaz="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/decklayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            derdidaz:stack_padding="6dp"
                            derdidaz:stack_scale=".1"/>

                </RelativeLayout>
        </LinearLayout>



</RelativeLayout>